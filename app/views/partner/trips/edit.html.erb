<div class="container">
  <div class ="row">
    <div class = "six columns">

      <h1 class="trip-title"><%= @trip.title %></h1>
      <% if @trip.online == true %>
        <p> Cet itinéraire est actuellement publié en ligne. </p>
      <% else %>
        <p> Cet itinéraire n'est actuellement pas publié en ligne. </p>
      <% end %>

      <h4>Modifier le satut</h4>

      <p>Catégorie : <%= @trip.category.name %></p>
      <p>Description : <%= @trip.description %></p>

      <% if @trip.places.length > 0 %>
        <table class="u-full-width">
          <thead>
            <tr>
              <th></th>
              <th>Nom</th>
              <th>Adresse</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @trip.places.each do |place|%>
              <tr>
                <% if place.place_picture.attached? %>
                  <td>
                    <img src = "<%= rails_blob_url(place.place_picture)%>" class = "twelve columns", style = "height: 50px; width: 45px">
                  </td>
                <% else %>
                  <td>
                    <img src = "https://images.unsplash.com/photo-1585068026984-52c8cb27ed5d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class = "twelve columns", style = "height: 50px; width: 45px">
                  </td>
                <% end %>
                <td><%= link_to "#{place.name}", partner_place_path(place[:id])%> </td>
                <td><%= place.address%></td>
                <td><%= link_to "Éditer", edit_partner_place_path(place[:id]), class:"button button-primary", style: "margin-top: 10px" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>Aucune étape n'a encore été ajoutée.</p>
      <% end %>

    </div>

    <div class ="six columns">
      <% if @trip.trip_picture.attached? %>
        <img src = "<%= rails_blob_url(@trip.trip_picture)%>" class = "twelve columns", style="float:left;width:100%;height:70%;object-fit:cover;">
      <% else %>
        <img src = "https://images.unsplash.com/photo-1585068026984-52c8cb27ed5d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" class = "twelve columns", style="float:left;width:100%;height:70%;object-fit:cover;">
      <% end %>
    </div>

  </div>
  <br>
  <br>
  <div class="">
    <%= link_to "Ajouter des lieux", partner_trip_waypoint_index_path(@trip[:id]), class:"button button-primary u-full-width" %>
  </div>

  <hr>
</div>
<br>

<%= render 'formEditTrip' %>
