  <h2>Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="six-columns">
        <%= f.input :login, label: "Identifiant",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", style: 'width: 100%' } %>
      </div>
      <br>

      <div class="six-columns">
        <%= f.input :password, label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password", style: 'width: 100%' } %>
      </div>
    </div>
    <br>

      <%= f.input :remember_me, label: "Conserver la connexion", as: :boolean if devise_mapping.rememberable? %>
      <br>
      <br>

      <%= f.button :submit, "CONNEXION", class:'button-primary' %>

  <% end %>

  <%= render "devise/shared/links" %>
