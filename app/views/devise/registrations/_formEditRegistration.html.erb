<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :email,
                  label: "email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "new-password", style: 'width: 100%' } %>
      <br>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p> <%= resource.unconfirmed_email %> : Nous attendons votre confirmation. Vérifiez vos emails. </p>
      <% end %>

      <%= f.input :first_name,
                  label: 'Prénom',
                  required: false,
                  input_html: { autocomplete: "first_name", style: 'width: 100%' } %>
      <br>

      <%= f.input :password,
                  label: 'Nouveau mot de passe',
                  hint: "Ne pas remplir si vous ne souhaitez pas modifier votre mot de passe.",
                  required: false,
                  input_html: { autocomplete: "new-password", style: 'width: 100%' } %>
      <br>

      <%= f.input :password_confirmation,
                  label: 'Confirmation de votre nouveau mot de passe',
                  required: false,
                  input_html: { autocomplete: "new-password", style: 'width: 100%' } %>
      <br>

      <%= f.input :current_password,
                  label: 'Mot de passe actuel',
                  hint: "Vous devez entrer votre mot de passe actuel afin d'enregistrer la modification.",
                  required: true,
                  input_html: { autocomplete: "current-password", style: 'width: 100%' } %>
    </div>
    <br>

    <div class="form-actions">
      <%= f.button :submit, "Enregistrer", class:'button button-primary' %>
    </div>
  <% end %>

  <h3>Suppression du compte</h3>

  <div class="flex-container-around">
    <p>Vous souhaitez supprimer vos données ?</p>
    <p> <%= link_to "Suppression", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'button' %></p>
  </div>

</div>
