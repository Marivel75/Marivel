<div class="box">
  <div class="container has-text-centered">
    <h2 class="title is-2 has-fontweight-bold">Édition de vos données</h2>
  </div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :email,
                  label: "email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "new-password" } %>
      <br>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p> <%= resource.unconfirmed_email %> : Nous attendons votre confirmation. Vérifiez vos emails. </p>
      <% end %>

      <%= f.input :first_name,
                  label: 'Prénom',
                  required: false,
                  input_html: { autocomplete: "first_name" } %>
      <br>

      <%= f.input :password,
                  label: 'Nouveau mot de passe',
                  hint: "Ne pas remplir si vous ne souhaitez pas modifier votre mot de passe.",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <br>

      <%= f.input :password_confirmation,
                  label: 'Confirmation de votre nouveau mot de passe',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <br>

      <%= f.input :current_password,
                  label: 'Mot de passe actuel',
                  hint: "Vous devez entrer votre mot de passe actuel afin d'enregistrer la modification.",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <br>

    <div class="form-actions">
      <%= f.button :submit, "Enregistrer", class:'button is-warning is-fullwidth' %>
    </div>
  <% end %>
</div>

<div class="box">
  <div class="container has-text-centered">
    <h2 class="title is-2 has-fontweight-bold">Suppression du compte</h2>
  </div>
  <br>
  <div class="container has-text-centered">
    <p>Vous souhaitez supprimer vos données ?</p>
    <%= link_to "Suppression", registration_path(resource_name), data: { confirm: "Confirmez-vous la suppression ?" }, method: :delete, class:'button is-danger is-fullwidth'%>
  </div>

</div>
