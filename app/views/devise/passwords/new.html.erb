<div class="security-zone">

  <div class="jumbotron">
    <div class="container">
      <p class="warning-text">Zone de sécurité</p>
    </div>
  </div>

  <div class="container">
    <h3 class="warning-text">Vous avez oublié votre mot de passe ?</h3>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div>
        <%= f.input :email,
                    label: false,
                    placeholder: "Entrez ici votre email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", style: 'width:100%' } %>
      </div>
      <br>
      <div>
        <%= f.button :submit, "M'envoyer la réinitialisation", class:'button-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <br>
  <br>

  <%= render 'shared/buttonBackToHome' %>
<br><br>
</div>
