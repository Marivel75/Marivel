<div class="jumbotron">
  <div class="container">
    <p class="warning-text">Zone de sécurité</p>
  </div>
</div>
<hr />

<div class="container">
  <h3>Vous avez oublié votre mot de passe ?</h3>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", style: 'width:100%' } %>
    </div>
    <br>
    <div>
      <%= f.button :submit, "Oui, il me faut les instructions pour le réinitialiser", class:'button-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<br>
<br>

<%= render 'shared/buttonBackToHome' %>
