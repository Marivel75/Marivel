<div class="container">
  <br><br><br><br>

  <h1>Résultats de la recherche</h1>

  <p>Nombre d'élements listés : <%= @places.total_count %></p>

  <% @places.each do |place| %>
    <div class="row">
      <div class="grid-item col-2">
        <% if place.place_picture.attached? %>
           <img src = "<%= rails_blob_url(place.place_picture)%>">
        <% else %>
          <img src = "https://images.unsplash.com/photo-1585068026984-52c8cb27ed5d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60">
        <% end %>
      </div>
      <div class="grid-item col-4">
        <p class="poi-name-sm"><%= link_to place.name, place %></p>
      </div>
      <div class="grid-item col-6">
        <p><%= place.address %></p>
      </div>
    </div>
    <hr>
  <% end %>

  <br>

  <%= link_to "Retour à l'accueil", root_path %>


</div>
