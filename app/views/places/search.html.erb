<div class="container">
  <br><br><br><br>
  <h1>Résultat de la recherche</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.address %></td>
          <td><%= link_to 'Show', place %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Retour à l'accueil", root_path %>


</div>
