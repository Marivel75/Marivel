<section class="section">

  <%= form_with model: place, local: true do |form| %>
    <% if place.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(place.errors.count, "error") %> Le lieu n'a pas pu être enregistré : </h2>

        <ul>
        <% place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "Nom" %>
      <%= form.text_field :name, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :address, "Adresse" %>
      <%= form.text_area :address, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :subtitle, "Sous-titre" %>
      <%= form.text_field :subtitle, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :description, "Description" %>
      <%= form.hidden_field :description, id:'place_description', class:"input" %>
      <trix-editor input="place_description"></trix-editor>
    </div>
    <br>
    <div class="field">
      <%= form.label :price, "Tarif" %>
      <%= form.text_field :price, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :price_2, "Autre tarif" %>
      <%= form.text_field :price_2, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :website, "Site internet" %>
      <%= form.text_field :website, class:"input" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :phone, "Téléphone" %>
      <%= form.text_field :phone, class:"input" %>
    </div>
    <br>
    <div class="field">
    <p>Vous pouvez ajouter une photo à votre lieu :</p>
    <%= form.file_field :place_picture %>
    </div>
    <br>
    <div class="field">
      <%= form.submit "Enregitrer le lieu", class:"button is-primary is-fullwidth" %>
    </div>

  <% end %>
</section>
