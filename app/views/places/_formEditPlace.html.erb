<%= form_with model: @place, local: true do |form| %>
  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= form.label :address %></strong>
    <%= form.text_area :address, class:"input" %>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :subtitle %></strong>
    <%= form.text_field :subtitle,class:"input" %>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :description %></strong>
    <%= form.hidden_field :description, id:'place_description', class:"input" %>
    <trix-editor input="place_description"></trix-editor>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :price %></strong>
    <%= form.text_field :price, class:"input" %>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :website %></strong>
    <%= form.text_field :website, class:"input" %>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :phone %></strong>
    <%= form.text_field :phone, class:"input" %>
  </div>
  <br>
  <div class="field">
    <strong><%= form.label :price_2 %></strong>
    <%= form.text_field :price_2, class:"input"%>
  </div>
  <br>
  <div class="flex-container">
  <strong><p>Vous pouvez modifier la photo associée à ce lieu : </p></strong>
  <%= form.file_field :place_picture %>
  </div>
  <br>
  <div class="field">
    <strong> <%= form.label :attribution, "Entrer une attribution pour l'auteur de la photo" %></strong>
    <%= form.text_field :attribution, class:"input" %>
  </div>
  <br>
  <div class="field">
    <%= form.submit "Confirmer les modifications", class:"button is-primary is-fullwidth" %>
  </div>
<% end %>
