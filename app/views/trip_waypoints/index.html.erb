<div class="container">

  <h2>Liste des lieux</h2>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Date de création</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td><%= place.id%></td>
          <td><%= place.name %></td>
          <td><%= place.created_at%></td>
          <td><%= link_to 'Détails du lieu', place_url(place[:id]) %></td>
          <td><%= button_to 'Ajouter', trip_waypoint_index_path(place_id: place.id)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

