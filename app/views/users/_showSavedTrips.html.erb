<div class="container">

  <h3>Carnet de route</h3>

  <div class="allTrips-container">
    <% if @user.saved_trips.length > 0 %>

     <% @user.saved_trips.each do |saved_trip| %>
       <div class="card-trip">
          <div class="card-image">
            <% if saved_trip.trip.trip_picture.attached? %>
               <img src = "<%= rails_blob_url(saved_trip.trip.trip_picture)%>" style="float:left;width:100%;height:70%;object-fit:cover;">
            <% else %>
              <img src = "https://images.unsplash.com/photo-1585068026984-52c8cb27ed5d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" style="float:left;width:100%;height:70%;object-fit:cover;">
            <% end %>
          </div>
          <div class="card-content">
            <div class="card-title">
              <%= link_to "#{saved_trip.trip.title}", trip_path(saved_trip.trip[:id]), class:"trip-title-card" %>
            </div>
            <div class="">
              <p class="strong-text-sm"><%= saved_trip.trip.category.name %></p>
              <%= link_to "Explorer", trip_path(saved_trip.trip[:id]), class:"button" %>
            </div>
          </div>
        </div>
     <%end%>

    <% elsif @user == current_user %>
      <p>Vous n'avez aucun trip enregistré dans votre carnet de voyage pour le moment</p>
    <% else %>
      <p><%= @user.first_name%> n'a enregistré aucun trip dans son carnet de voyage pour le moment !</p>
    <% end %>

  </div>

</div>
