<div class="container">

  <h3>Carnet de route</h3>

  <div class="allTrips-container">
    <% if @user.saved_trips.length > 0 %>

     <% @user.saved_trips.each do |saved_trip| %>
       <div class="card-trip">
          <div class="card-image">
            <img src="">
          </div>
          <div class="card-content">
            <div class="card-title">
              <%= link_to "#{saved_trip.trip.title}", trip_path(saved_trip.trip[:id]), class:"trip-title" %>
            </div>
            <div class="">
              <p class="strong-text"><%= saved_trip.trip.category.name %></p>
              <p><%= saved_trip.trip.description %></p>
              <%= link_to "Explorer", trip_path(saved_trip.trip[:id]), class:"button" %>
            </div>
          </div>
        </div>
     <%end%>

    <% elsif @user == current_user %>
      <p>Vous n'avez aucun trip enregistré dans votre carnet de voyage pour le moment</p>
    <% else %>
      <p><%= @user.first_name%> n'a enregistré aucun trip dans son carnet de voyage pour le moment !</p>
    <% end %>

  </div>

</div>
