<section class="hero is-large hero-user-account">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white"> Bienvenue <%= @user.first_name%> </h1>
    </div>
  </div>
</section>

<section class="section">
    <% if @user == current_user %>
      <div class="columns is-centered">
        <div class="column">

        </div>
        <div class="column has-text-centered">
          <%= link_to 'Paramètres du compte', edit_user_registration_path, class:'button is-rounded' %>
        </div>
        <div class="column">
          <%= link_to "Créer un itinéraire personnalisé", new_trip_path, class:"button is-rounded is-primary" %>
        </div>
        <div class="column">

        </div>
      </div>
    <% end %>
</section>

<section class="section">
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-three-quarters-tablet is-three-quarters-desktop is-three-fifths-widescreen is-three-fifths-fullhd">
      <%= render 'showUserTrips' %>
    </div>
  </div>
</section>

<section class="section">
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-three-quarters-tablet is-three-quarters-desktop is-three-fifths-widescreen is-three-fifths-fullhd">
      <%= render 'showSavedTrips' %>
    </div>
  </div>
</section>
