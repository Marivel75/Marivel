<div class="container">
  <h1> Liste des trip </h1>


  <table class="u-full-width">

    <thead>
      <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>ID de l'auteur</th>
        <th>Catégorie</th>
        <th>Date de création</th>
        <th>Date de dernière actualisation</th>
        <th>Statut</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.id %></td>
          <td><%= trip.title %></td>
          <td><%= trip.author_id %></td>
          <td><%= trip.category.name %></td>
          <td><%= trip.created_at %></td>
          <td><%= trip.updated_at %></td>
          <td><%= trip.online %></td>
          <td>
            <%= link_to 'Editer', edit_admin_trip_path(trip[:id]) %>
          </td>
          <td> <%= link_to 'Supprimer', admin_trip_path(trip[:id]), method: :delete, data: {confirm: "Êtes-vous sûr de supprimer ce trip ?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>
