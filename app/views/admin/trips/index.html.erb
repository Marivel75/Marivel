<div class="container">

  <div class="section">
    <h2 class="center-align">Les itinéraires</h2>
  </div>

  <div class="section">



      <% @trips.each do |trip| %>
        <div class="">
          <h2><%= trip.title %></h2>
        </div>
        <div class="">
          <p class="strong-text"><%= trip.category.name %></p>
          <p><%= trip.description %></p>
          <%= link_to "Éditer cet itinéraire", edit_admin_trip_path(trip[:id]), class:"button" %>
        </div>
      <% end %>

  </div>

</div>
