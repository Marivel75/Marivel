<section class="section">
  <%= form_with(url: [:admin, @trip], model: @trip, local: true, multipart: true) do |form| %>
    <% if @trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(trip.errors.count, "error") %> L'itinéraire n'a pas pu être enregistré :</h2>

        <ul>
        <% trip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>

        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, "Titre" %>
      <%= form.text_field :title, class:"input" %>
    </div>
  <br>

    <div class="field">
      <%= form.label :category, "Catégorie" %>
      <%= select_tag :category_id, options_for_select(@categories), prompt: "Sélectionnez une catégorie de trip.", class:"input" %>
    </div>

  <br>

    <div class="field">
      <%= form.label :description, "Description" %>
      <%= form.hidden_field :description, id:'trip_description' %>
      <trix-editor input="trip_description"></trix-editor>
    </div>
    <br>
    <br>

    <div class="field">
      <p>Vous pouvez ajouter une photo à votre itinéraire :</p>
      <%= form.file_field :trip_picture %>
    </div>
    <br>
    <br>

    <div class="field">
      <%= form.submit "Enregistrer l'itinéraire", class:"button is-primary"%>
    </div>

  <% end %>

</section>
