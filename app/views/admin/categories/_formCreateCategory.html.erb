<p class="strong-text"> Vous pouvez créer une nouvelle catégorie en remplissant les champs ci-dessous.</p>


<%= form_with(url: [:admin, category], model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nom" %>
    <%= form.text_field :name, class:"u-full-width" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class:"u-full-width"  %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:'button-primary' %>
  </div>
<% end %>
