<section class="section">
  <div class="container has-text-centered">
    <h1 class="title is-1">Liste des categories</h1>
  </div>

    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Date de création</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= category.created_at %></td>
            <td><%= link_to 'Editer', edit_admin_category_path(category) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="container has-text-centered">
      <%= link_to 'Créer une nouvelle catégorie', new_admin_category_path, class:"button is-primary" %>
    </div>

</section>
