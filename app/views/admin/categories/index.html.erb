<div class="container">
  <h1>Liste des categories</h1>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Date de création</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.created_at %></td>
          <td><%= link_to 'Editer', edit_category_path(category) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Créer une nouvelle catégorie', new_category_path, class:"button button-primary" %>

</div>
