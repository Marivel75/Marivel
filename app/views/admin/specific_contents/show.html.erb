<section class="section">
  <div class="columns is-centered">
    <div class="column is-two-thirds-fullhd is-two-thirds-widescreen is-three-quarters-desktop is-three-quarters-tablet is-full-mobile">


      <% if @specific_content.specific_content_picture.attached? %>
        <div class="columns is-centered">
          <div class="column is-half">
            <div class="container">
              <img src="<%= rails_blob_url(@specific_content.specific_content_picture)%>" alt="photo">
            </div>
          </div>
        </div>
      <% end %>

      <p>
        <strong>Titre</strong>
        <%= @specific_content.title %>
      </p>

      <p>
        <strong>Sous-titre:</strong>
        <%= @specific_content.subtitle %>
      </p>

      <p>
        <strong>Contenu:</strong>
        <%= sanitize @specific_content.content %>
      </p>

      <p>
        <strong>Lien externe:</strong>
        <%= link_to @specific_content.external_link, "#{@specific_content.external_link}", target:"_blank" %>
      </p>
      <br>

      <div class="buttons is-centered">
        <%= link_to 'Éditer le contenu', edit_admin_specific_content_path(@specific_content), class:"button is-info" %>
        <%= link_to 'revenir à la liste des contenus', admin_specific_contents_path, class:'button' %>
      </div>


    </div>
  </div>
</section>
