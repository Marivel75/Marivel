<section class="hero is-medium hero-user-account">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white"> <%= @user.first_name%> </h1>
    </div>
    <div class="container has-text-centered">
      <h2 class="subtitle is-2 has-text-white"> <%= @user.description%> </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="buttons is-centered">
    <% if @user == current_user %>
     <%= link_to 'Modifier le mot de passe', edit_user_registration_path, class:'button is-warning is-rounded' %>
     <%= link_to 'Éditer le compte', edit_admin_user_path(@user.id), class:"button is-rounded" %>
    <%end%>
  </div>
  <% if isAdmin? %>
  <div class="container has-text-centered">
    <%= link_to "Créer un itinéraire pour publication", new_trip_path, class:"button is-rounded is-primary" %>
    <%= link_to "Espace Admin", admin_admin_path, class:"button is-info is-rounded" %>
  </div>
  <% end %>
</section>

<section class="section">
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-three-quarters-tablet is-three-quarters-desktop is-three-fifths-widescreen is-three-fifths-fullhd">
      <%= render 'users/showUserTrips' %>
    </div>
  </div>
</section>

<section class="section">
  <div class="columns is-mobile is-centered">
    <div class="column is-full-mobile is-three-quarters-tablet is-three-quarters-desktop is-three-fifths-widescreen is-three-fifths-fullhd">
      <%= render 'users/showSavedTrips' %>
    </div>
  </div>
</section>
