<%= form_with(url: [:admin, user], model: user, local: true) do |f| %>
<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(place.errors.count, "error") %> Les modifications n'ont pas pu être enregistrées :</h2>

    <ul>
    <% place.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <p>Profil actuel : <strong><%= user.role %></strong></p>
    <p><strong><%= f.label :role, "Modifier le profile" %></strong></p>
    <div class="select is-fullwidth">
      <%= f.select :role, options_for_select(@roles), option: "Modifier le profil" %>
    </div>
  </div>
  <br>
  <div class="field">
    <strong><%= f.label :first_name, "Prénom" %></strong>
    <%= f.text_field :first_name, class:'input' %>
  </div>
  <br>
  <div class="field">
    <strong><%= f.label :last_name, "Nom" %></strong>
    <%= f.text_field :last_name, class:'input' %>
  </div>
  <br>
  <div class="field">
    <strong><%= f.label :email, "email" %></strong>
    <%= f.text_field :email, class:'input' %>
  </div>
  <br>
  <div class="field">
    <strong><%= f.label :description, "Bio" %></strong>
    <%= f.text_field :description, class:'input' %>
  </div>
  <br>
  <div class="field">
    <%= f.submit "Confirmer les modifications", class:"button is-warning is-fullwidth" %>
  </div>
<% end %>
