<div class="container">
  <h1> Liste des comptes </h1>


  <table class="u-full-width">

    <thead>
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>email</th>
        <th>Statut</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to 'Editer', edit_admin_user_path(user[:id]) %>
          </td>
          <td> <%= link_to 'Supprimer', admin_user_path(user[:id]), method: :delete, data: {confirm: "Êtes-vous sûr de supprimer ce compte utilisateur ?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>
