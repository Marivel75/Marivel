<div class="container">
    <h2> Formulaire d'édition du lieu </h2>
  <br>
  <br>

  <%= form_with(url: [:admin, place], model: place, local: true) do |form| %>
    <% if place.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(place.errors.count, "error") %> Les modifications n'ont pas pu être enregistrées :</h2>

        <ul>
        <% place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :address, "Adresse" %>
      <%= form.text_area :address, class:"u-full-width" %>
    </div>
    <br>

    <div class="field">
      <%= form.label :subtitle, "Sous-titre" %>
      <%= form.text_field :subtitle, class:"u-full-width" %>
    </div>
    <br>

    <div class="field">
      <%= form.label :description, "Description" %>
      <%= form.hidden_field :description, id:'place_description', class:"u-full-width" %>
      <trix-editor input="place_description"></trix-editor>
    </div>
    <br>
    <br>
    <div class="field">
      <%= form.label :price, "Tarif" %>
      <%= form.text_field :price, class:"u-full-width" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :price_2, "Autre tarif" %>
      <%= form.text_field :price_2, class:"u-full-width" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :website, "Site internet" %>
      <%= form.text_field :website, class:"u-full-width" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :phone, "Téléphone" %>
      <%= form.text_field :phone, class:"u-full-width" %>
    </div>
    <br>
    <div class="flex-container">
    <p>Vous pouvez modifier la photo associée à ce lieu : </p>
    <%= form.file_field :place_picture %>
    </div>

    <div class="actions">
      <%= form.submit "Confirmer les modifications", class:"button-primary" %>
    </div>
  <% end %>

</div>
