<div class="tile is-parent is-4">
  <div class="tile is-child box">
    <figure class="image is-5by3">
      <% if trip.trip_picture.attached? %>
        <%= link_to image_tag(trip.trip_picture), trip_path(trip[:id]) %>
      <% else %>
        <%= link_to image_tag("https://images.unsplash.com/photo-1589596619062-068730a17443?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80"), trip_path(trip[:id]) %>
      <% end %>
    </figure>
    <br>
    <p><%= link_to "#{trip.title}", trip_path(trip[:id]), class:"title is-5 has-text-black-bis" %></p>
    <br>
    <p class="subtitle has-text-black is-7">
      <%= trip.category.name %>
    </p>
    <div class="content">
      <p class="is-size-7"><%= trip.author.last_name %></p>
    </div>
  </div>
</div>
