<% if @trip.trip_picture.attached? %>
<section class="hero is-large" style="background-image:url(<%= rails_blob_url(@trip.trip_picture)%>); background-size: cover; background-position: center;">

  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title is-1 has-text-white">
        <%= @trip.title %>
      </h1>
    </div>
  </div>

</section>

  <% if @trip.attribution_photo %>
   <p class="is-size-7 has-text-grey-light has-text-right"><%= @trip.attribution_photo %></p>
  <% end %>

<% else %>
  <section class="hero is-medium" style="background-size:cover;background-image: url('https://images.unsplash.com/photo-1589596619062-068730a17443?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80')">
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title is-1 has-text-white">
          <%= @trip.title %>
        </h1>
      </div>
    </div>
  </section>
<% end %>
