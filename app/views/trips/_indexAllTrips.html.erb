<div class="container">
  <div class="section">

      <div class="section">
        <h2 class="center-align">Explorez les trips</h2>
      </div>
      <%= render 'shared/navbar' %>

    <div class="allTrips-container">

      <% @trips.each do |trip| %>
        <div class="card-trip">
          <div class="card-image">
            <img src="">
          </div>
          <div class="card-content">
            <div class="card-title">
              <%= link_to "#{trip.title}", trip_path(trip[:id]), class:"trip-title" %>
            </div>
            <div class="">
              <p class="strong-text"><%= trip.category.name %></p>
              <p><%= trip.description %></p>
              <%= link_to "Explorer", trip_path(trip[:id]), class:"button" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>
