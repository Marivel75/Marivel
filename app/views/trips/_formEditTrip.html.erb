<div class="container">

  <%= form_with model: @trip, local: true do |form| %>
    <% if @trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(place.errors.count, "error") %> Les modifications n'ont pas pu être enregistrées :</h2>

        <ul>
        <% place.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, "Titre de l'itinéraire" %>
      <%= form.text_field :title, class:"u-full-width" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :description, "Description" %>
      <%= form.hidden_field :description, id:'trip_description', class:"u-full-width" %>
      <trix-editor input="trip_description"></trix-editor>
    </div>
    <br>
    <div class="flex-container">
    <p> Modifier la photo associée : </p>
    <%= form.file_field :trip_picture %>
    </div>
    <br>
    <div class="">
      <p class = strong-text>Categorie actuelle : <%= @trip.category.name %> </p>
      <%= form.label :category, "Modifier la catégorie" %>
      <%= select_tag :category_id, options_for_select(@categories), prompt: "Sélectionner une catégorie", class:"u-full-width" %>
    </div>
    <br>
    <br>
    <div class="actions">
      <%= form.submit "Confirmer les modifications", class:"button-primary" %>
    </div>
  <% end %>
</div>
<br>
<hr />

    <div class="container">
      <%= link_to "Revenir à l'accueil", trips_path, class:"button btn-margin" %>
      <% if @trip.author == current_user %>
      <%= link_to "Supprimer le trip", trip_path(@trip[:id]), method:"delete", data: {confirm: "Confirmez-vous la suppression de cet itinéraire ?"}, class:"button btn-margin" %>
      <% end %>
    </div>
  <br>
  <br>
  <br>
